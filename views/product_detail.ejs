<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="side-bar">
        <div class="row">
          <div class="col-sm-2">
            <ul class="bar-nav">
              <li><a href="/">Home</a></li>
              <li><a href="/market/products">All products</a></li>
              <li><a href="/market/categories">Categories</a></li>
              <hr />
              <li><a href="/market/product/create">Create product</a></li>
              <li><a href="/market/category/create">Create category</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="right-side">
        <h1>Welcome to <%= title %></h1>
        <% if(product){%>
          <h1><%= product.name%></h1>
          <p>Description: <%= product.summary%></p>
          <p>$<%= product.price%></p>
          <%if(product.category.length){%>
            <% product.category.forEach((category) =>{%>
              <p>Category: <a href="<%= category.url%>"><%= category.name %></a></p>
              <% }); } %>
        <% }%>
        <a href="<%= product.url%>/delete">Delete product</a>
        <a href="<%= product.url%>/update">Update product</a>
      </div>
    </div>
  </body>
</html>
