<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/stylesheets/index.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div class="side-bar">
        <div class="row">
          <div class="col-sm-2">
            <ul class="bar-nav">
              <li><a href="/">Home</a></li>
              <li><a href="/market/products">All products</a></li>
              <li><a href="/market/categories">Categories</a></li>
              <hr />
              <li><a href="/market/product/create">Create product</a></li>
              <li><a href="/market/category/create">Create category</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="right-side">
        <h1><%=title%></h1>
        <% if(title === "update"){%>
        <form action="/market/category/<%=category._id%>/<%= title%>" method="POST">
          <label for="name">Category name:</label>
          <input
            id="name"
            type="text"
            name="name"
            required
            minlength="3"
            value="<%= typeof category === "undefined" ? "" : category.name %>"
          />
          <button>Submit</button>
        </form>
          <% }else{%>
        <form action="/market/category/<%= title%>" method="POST">
          <label for="name">Category name:</label>
          <input
            id="name"
            type="text"
            name="name"
            required
            minlength="3"
            value="<%= typeof category === "undefined" ? "" : category.name %>"
          />
          <button>Submit</button>
        </form>
            <%}%>
         
      </div>
    </div>
  </body>
</html>
